<ctrls:GDialog x:Class="BDLauncherCSharp.SaveLoaderDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ctrls="clr-namespace:BDLauncherCSharp.Controls"
             xmlns:local="clr-namespace:BDLauncherCSharp"
             mc:Ignorable="d" Background="#8000" BorderBrush="#000" BorderThickness="2"
             Width="600" Height="325">
    <Grid Margin="0 -20 0 0" HorizontalAlignment="Center">
        <DataGrid x:Name="SaveList" AlternatingRowBackground="LightBlue" Width="500" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Save Name" Width="*"/>
                <DataGridTextColumn Header="Save Time" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</ctrls:GDialog>
