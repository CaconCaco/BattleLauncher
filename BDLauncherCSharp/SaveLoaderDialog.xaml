<ctrls:GDialog x:Class="BDLauncherCSharp.SaveLoaderDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ctrls="clr-namespace:BDLauncherCSharp.Controls"
             xmlns:local="clr-namespace:BDLauncherCSharp"
             mc:Ignorable="d" Background="#8000" BorderBrush="#000" BorderThickness="2"
             Width="600" Height="325">
    <Grid Margin="0 -20 0 0" HorizontalAlignment="Center">
        <ListView x:Name="SaveList" Width="500" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Save Name" Width="320"/>
                    <GridViewColumn Header="Save Time" Width="160"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</ctrls:GDialog>
