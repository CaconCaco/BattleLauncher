<ctrls:GDialog x:Class="BDLauncherCSharp.SaveLoaderDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ctrls="clr-namespace:BDLauncherCSharp.Controls"
             xmlns:local="clr-namespace:BDLauncherCSharp"
             mc:Ignorable="d" Background="#8000" BorderBrush="#000" BorderThickness="2"
             Width="600" Height="325">
    <Grid Margin="0 -20 0 0" HorizontalAlignment="Center" >
        <DataGrid 
            x:Name="SaveList" Margin="-10 0"
            IsReadOnly="true" SelectionMode="Single"
            AutoGenerateColumns="False"
            CanUserReorderColumns="False"
            RowHeaderWidth="0" RowHeight="20" Grid.Row="1"
            AlternationCount="2" AlternatingRowBackground="#F4F4F4"
            HeadersVisibility="All" GridLinesVisibility="None">
            <DataGrid.Columns>
                    <DataGridTextColumn Header="存档名" Binding="{Binding Name}" MinWidth="80" Width="*"/>
                    <DataGridTextColumn Header="存档时间" Binding="{Binding Time}" MinWidth="150"/>
                </DataGrid.Columns>
        </DataGrid>
    </Grid>
</ctrls:GDialog>
