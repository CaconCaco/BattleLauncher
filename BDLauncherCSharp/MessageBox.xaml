<ctrls:GDialog x:Uid="dlgMessageBox"
    x:Class="BDLauncherCSharp.MessageBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrls="clr-namespace:BDLauncherCSharp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BDLauncherCSharp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="#B000" BorderBrush="#000" BorderThickness="2"
    mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <TextBlock x:Name="_message"
        Margin="10 2" HorizontalAlignment="Center"
        VerticalAlignment="Center" TextWrapping="Wrap" />
</ctrls:GDialog>
